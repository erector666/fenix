# üèóÔ∏è FENIX Construction Tracker - Production Environment Variables
# Copy this file to .env.production for production deployment
# Set these variables in your Vercel dashboard

# =============================================================================
# üåê APPLICATION CONFIGURATION
# =============================================================================

NODE_ENV=production
PORT=3000
APP_NAME=FENIX Construction Tracker
APP_VERSION=1.0.0

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL (Required)
# Options: Vercel Postgres, Supabase, Neon, PlanetScale
DATABASE_URL=postgresql://username:password@host:port/database

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret (Required - Generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters

# CORS Configuration
CORS_ORIGIN=https://your-app.vercel.app

# =============================================================================
# üåç FRONTEND CONFIGURATION
# =============================================================================

# API URL (Set automatically by Vercel)
REACT_APP_API_URL=/api

# Google Maps API Key (Optional - for location features)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# üì± MOBILE APP CONFIGURATION
# =============================================================================

# Capacitor Configuration
CAPACITOR_SERVER_URL=https://your-app.vercel.app

# =============================================================================
# üìä MONITORING & ANALYTICS
# =============================================================================

# Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# =============================================================================
# üîß PERFORMANCE & OPTIMIZATION
# =============================================================================

# Cache Configuration
CACHE_TTL=3600
MAX_CONNECTIONS=10

# =============================================================================
# üìß EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# =============================================================================
# üîî NOTIFICATIONS (Optional)
# =============================================================================

# Push Notifications
FIREBASE_SERVER_KEY=your_firebase_server_key_here

# =============================================================================
# üìÅ FILE STORAGE (Optional)
# =============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# üöÄ DEPLOYMENT CONFIGURATION
# =============================================================================

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# =============================================================================
# üîí SECURITY HEADERS
# =============================================================================

# Content Security Policy
CSP_NONCE=your_csp_nonce_here

# =============================================================================
# üìã REQUIRED VARIABLES FOR DEPLOYMENT
# =============================================================================

# These variables MUST be set in Vercel:
# 1. DATABASE_URL - Your PostgreSQL connection string
# 2. JWT_SECRET - A strong secret key for JWT tokens
# 3. NODE_ENV=production

